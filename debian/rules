#!/usr/bin/make -f

export PYBUILD_NAME=vispy
#export PYBUILD_DISABLE=test
export PYBUILD_AFTER_INSTALL=ln -fs usr/share/javascript/jquery-mousewheel/jquery.mousewheel.min.js \
	{destdir}/{install_dir}/vispy/html/static/js/jquery.mousewheel.min.js

%:
	dh $@ --with python2,python3,sphinxdoc --buildsystem=pybuild

override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. http_proxy='127.0.0.1:9' \
		sphinx-build -N -b html doc build/html

override_dh_auto_test:
	PYBUILD_SYSTEM=custom \
	PYBUILD_TEST_ARGS="xvfb-run -s \"-screen 0 640x480x24 -ac +extension GLX +render\" {interpreter} -c \"import vispy; vispy.test('nobackend')\"" \
		dh_auto_test
